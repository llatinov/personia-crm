{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.nx": true,
    "**/node_modules": false
  }
}
